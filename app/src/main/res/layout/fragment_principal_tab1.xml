                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout="@layout/dummy_map_layout">

            <Button
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:layout_gravity="right|top"
                android:padding="10dp"
                android:onClick="centerUsuarioMapatab1"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/gpsbutton"
                android:alpha="0.8"
                android:paddingRight="10dp"/>

                <Button
                    android:layout_width="250dp"
                    android:layout_height="37dp"
                    android:id="@+id/linhas_desse_ponto"
                    android:layout_gravity="left|bottom"
                    android:padding="0dp"
                    android:text="@string/linhas_desse_ponto"
                    android:textSize="12dp"
                    android:textStyle="normal"
                    android:onClick="centerUsuarioMapatab1"
                    android:layout_marginBottom="110dp"
                    android:layout_marginLeft="0dp"
                    android:background="@drawable/bordermenu"
                    android:alpha="0.8"
                    android:paddingRight="10dp"/>

                <Button
                    android:layout_width="250dp"
                    android:layout_height="37dp"
                    android:id="@+id/rotasdaqui"
                    android:layout_gravity="left|bottom"
