<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:baselineAligned="false"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="297dp"
            android:layout_height="25dp"
            android:background="@drawable/border"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="40dp"
            android:weightSum="1"
            android:layout_weight="0.17">

            <EditText
                android:layout_width="247dp"
                android:layout_height="49dp"
                android:id="@+id/nomeOuNumeroLinha"
                android:hint="@string/digite_o_n_mero_ou_o_nome_da_linha"
                android:textColorHint="@color/not_selected_tab_color"
                android:paddingLeft="10dp"
                android:textSize="12dp"
                android:imeActionLabel="Ok"
                android:singleLine="true"
                android:textColor="#009FD6"
                android:backgroundTint="@color/color_primary1"
                android:layout_weight="0.96"
                android:layout_marginTop="-13dp" />

            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:id="@+id/clear"
                android:layout_weight="14.08"
                android:weightSum="1">
                <ImageView
                    android:layout_width="11dp"
                    android:layout_height="11dp"
                    android:background="@drawable/cleartexto"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="8dp" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:text="@string/pesquisar_por_linha"
            android:id="@+id/buttonExibirResultado"
            android:background="@drawable/cornerborder"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="40dp"
            android:onClick="pesquisarLinhas"/>

        <ImageView
            android:id="@+id/click16"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/touchpoint3"
            android:layout_marginTop="-15dp"
            android:repeatCount="infinite"
            android:duration="6000"
            android:layout_gravity="center"/>
    </LinearLayout>

</RelativeLayout>