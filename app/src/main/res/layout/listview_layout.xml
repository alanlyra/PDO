<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="1">

    <TextView
        android:id="@+id/valid"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:text="1"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/flag"
        android:layout_height="50dp"
        android:layout_width="45dp"
        android:layout_marginTop="1dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="-2dp"
        android:background="@drawable/busvector"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        />

    <LinearLayout
        android:layout_width="228dp"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.60">
        <TextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="6dp"
            android:layout_marginLeft="5dp"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/color_primary3"/>

        <TextView
            android:id="@+id/cur"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginLeft="5dp"
            android:textSize="11dp"
            android:textColor="@color/color_primary3"
            android:layout_marginTop="-3dp" />

    </LinearLayout>


    <FrameLayout
        android:layout_width="69dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:id="@+id/tempodeviagem">

        <ImageView
            android:id="@+id/clock"
            android:layout_width="28dp"
            android:layout_height="12dp"
            android:background="@drawable/clock1"
            android:nestedScrollingEnabled="true"
            android:layout_gravity="center"
            android:layout_marginTop="-12dp"
            />

        <TextView
            android:id="@+id/tempochegada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12"
            android:textSize="12dp"
            android:textStyle="bold"
            android:textColor="@color/light_gray_header_color"
            android:layout_gravity="center"
            android:layout_marginTop="-3dp"
            />

        <ImageView
            android:id="@+id/minORhour"
            android:layout_width="28dp"
            android:layout_height="12dp"
            android:background="@drawable/min"
            android:nestedScrollingEnabled="true"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            />
    </FrameLayout>
    <FrameLayout
        android:layout_width="62dp"
        android:layout_height="60dp"
        android:layout_gravity="center_vertical|right"
        android:id="@+id/frameoptions"
        android:layout_weight="0.30">

        <ImageView
            android:id="@+id/options"
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:background="@android:color/transparent"
            android:nestedScrollingEnabled="true"
            android:layout_gravity="center"
            />
    </FrameLayout>

</LinearLayout>