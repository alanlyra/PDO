    <FrameLayout
        android:layout_width="69dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:id="@+id/tempodeviagem">

        <ImageView
            android:id="@+id/clock"
            android:layout_width="40dp"
            android:layout_height="15dp"
            android:background="@drawable/clock1"
            android:nestedScrollingEnabled="true"
            android:layout_gravity="center"
            android:layout_marginTop="-18dp"
            />

        <TextView
            android:id="@+id/tempochegada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/light_gray_header_color"
            android:layout_gravity="center"
            android:layout_marginTop="-5dp"
            />

        <ImageView
            android:id="@+id/minORhour"
            android:layout_width="40dp"
            android:layout_height="15dp"
            android:background="@drawable/min"
            android:nestedScrollingEnabled="true"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            />
    </FrameLayout>
    <FrameLayout
        android:layout_width="62dp"
        android:layout_height="60dp"
        android:layout_gravity="center_vertical|right"
        android:id="@+id/frameoptions"
        android:layout_weight="0.30">

        <ImageView
            android:id="@+id/options"
            android:layout_width="wrap_content"
            android:layout_height="21dp"
